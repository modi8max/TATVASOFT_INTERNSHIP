@{
}
@model StudentPortal.web.Data.Student
@if (Model is null)
{
    <p>The Student not found</p>
}
else
{
    <h1>Edit Student</h1>
    <form method="Post"> 
        <div class="mt-3">
          <!--  <label class="form-label">Id</label>
              <input class="form-control" type="text" asp-for="Id" readonly/> -->

            <label class="form-label">Name</label>
            <input class="form-control" type="text" asp-for="Name"/>

            <label class="form-label">Email</label>
            <input class="form-control" type="email" asp-for="Email"/>

            <label class="form-label">Phone</label>
            <input class="form-control" type="text" asp-for="Phone"/>

            <label class="form-label">Branch</label>
            <input class="form-control" type="text" asp-for="Branch"/>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Student">Delete</button>
        </div>
    </form>
}